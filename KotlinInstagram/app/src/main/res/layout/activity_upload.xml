<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/uploadSelectImageView"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:layout_marginTop="100dp"
        android:onClick="selectImageClicked"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/selectimage" />

    <EditText
        android:id="@+id/commentText"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="  Enter Comment"
        android:inputType="textPersonName"
        android:background="@drawable/edit_text_shape"
        app:layout_constraintEnd_toEndOf="@+id/uploadSelectImageView"
        app:layout_constraintStart_toStartOf="@+id/uploadSelectImageView"
        app:layout_constraintTop_toBottomOf="@+id/uploadSelectImageView" />

    <Button
        android:id="@+id/uploadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:onClick="uploadClicked"
        android:text="Upload"
        android:background="@drawable/button_shape"
        app:layout_constraintEnd_toEndOf="@+id/commentText"
        app:layout_constraintStart_toStartOf="@+id/commentText"
        app:layout_constraintTop_toBottomOf="@+id/commentText"
        android:shadowColor="@color/black"
        android:shadowRadius="20"/>

    <TextView
        android:id="@+id/uploadActivityUserEmailText"
        android:layout_width="379dp"
        android:layout_height="43dp"
        android:layout_marginTop="10dp"
        android:text="celal@gmail.com"
        android:textColor="#00AAC0"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>