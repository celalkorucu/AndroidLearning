<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/linear_layout_shape"



    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10sp">

  <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/usersProfileImage"
      android:layout_width="60dp"
      android:layout_height="60dp"
      android:src="@drawable/panda"
      android:layout_margin="10sp"

      ></de.hdodenhof.circleimageview.CircleImageView>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/usersUsernameText"
                android:layout_width="180dp"
                android:layout_height="wrap_content"


                android:text="Celal KORUCU"
                android:textSize="20sp"></TextView>


            <TextView
                android:id="@+id/usersEmailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="celal@gmail.com"
                android:textSize="15sp" ></TextView>

        </LinearLayout>


        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/usersFollowedButton"
            android:onClick="usersFollowedClicked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Follow"
            android:background="@drawable/button_shape"
            android:layout_marginRight="20sp"/>

    </LinearLayout>

</LinearLayout>